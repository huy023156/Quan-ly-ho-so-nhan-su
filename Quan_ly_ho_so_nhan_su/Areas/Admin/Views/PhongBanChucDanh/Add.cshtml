@model PhongBanChucDanhVM

<div class="card shadow border-0 mt-5">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white-50 py-2">Thêm chức danh</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input asp-for="@Model.PhongBan.Id" hidden />
			<input asp-for="@Model.PhongBan.Name" hidden />

			@* <span asp-validation-sumary="ModelOnly"></span> *@

			<div class="border p-3">
				<div class="form-floating col-12 py-2">
					<div class="form-floating col-12 py-2">
						<select asp-items="Model.ChucDanhList" asp-for="ChucDanhId" class="form-select border-0 shadow">
							<option disabled selected>--Select Chức Danh--</option>
						</select>
						<label asp-for="ChucDanhId" class="ms-2"></label>
						<span asp-validation-for="ChucDanhId" class="text-danger"></span>
					</div>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Thêm</button>

					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="PhongBanChucDanh" asp-action="Index" asp-route-id="@Model.PhongBan.Id" class="btn btn-outline-secondary form-control">
							Quay lại
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}
