<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white-50 py-2">Quản lý nghỉ việc</h2>
        </div>
    </div>
    <div class="card-body shadow p-4">
        <table id="tblData" class="table table-bordered table-striped compact">
            <thead>
                <tr>
                    <th>Người tạo</th>
                    <th>Nhân viên</th>
                    <th>Lý do</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th>Ngày cập nhật</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": { url: '/Admin/AdminResignation/GetAll/' },
                "columns": [
                    { data: 'user', width: '25%'},
                    { data: 'name', width: '25%' },
                    { data: 'reason', width: '10%' },
                    { data: 'status', width: '10%' },
                    {
                        data: 'createdDate',
                        render: function (data) {
                            return formatDate(data);
                        },
                        width: '10%'
                    },
                    {
                        data: 'updatedDate',
                        render: function (data) {
                            return formatDate(data);
                        },
                        width: '10%'
                    },
                    {
                        data: 'id',
                        "render": function (data, type, row) {
                            return `<div class="w-100 btn-group ms-auto btn-group-equal" role="group">
                                                <a onClick="Accept('/Admin/AdminResignation/Accept/${data}')" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i> Accept</a>
                                                <a onClick="Reject('/Admin/AdminResignation/Reject/${data}')" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Reject</a>
                                            </div>`;
                        },
                        width: '10%'
                    }
                ]
            });
        }

        function Accept(url) {
            Swal.fire({
                title: "Bạn chắc chứ?",
                text: "Đơn xin nghỉ việc sẽ được chấp nhận!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Accept"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        success: function (data) {
                            dataTable.ajax.reload();
                            toastr.success(data.message);
                        }
                    })
                }
            });
        }

        function Reject(url) {
            Swal.fire({
                title: "Bạn chắc chứ?",
                text: "Đơn xin nghỉ việc sẽ bị từ chối!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Reject"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        success: function (data) {
                            dataTable.ajax.reload();
                            toastr.success(data.message);
                        }
                    })
                }
            });
        }

        function formatDate(datetime) {
            if (!datetime) return '';
            var date = new Date(datetime);
            var day = ("0" + date.getDate()).slice(-2);
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var year = date.getFullYear();
            return `${day}-${month}-${year}`;
        }
    </script>
}