@model Employee

<div class="card shadow border-0 mt-5">
    <input type="hidden" id="pc_employeeId" value="@Model.Id" />
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white-50 py-2">Phụ cấp của @Model.Name</h2>
        </div>
    </div>
    <div class="card-body shadow p-4">
        <table id="tblData" class="table table-bordered table-striped compact">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
        </table>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <a asp-controller="EmployeePhuCap" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script @* src="~/js/quyetDinhDetail.js" *@>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            var id = $('#pc_employeeId').val();
            var url = `/User/EmployeePhuCap/GetPhuCapListByEmployeeId/${id}`;
            dataTable = $('#tblData').DataTable({
                "ajax": { url: url },
                "columns": [
                    { data: 'name', width: '40%' },
                    {
                        data: 'amount',
                        "render": function (data, type, row) {
                            return `<input type="number" class="form-control text-center" value="${row.amount}" onchange="updateAmount(${row.phuCapId}, this.value)">`;
                        },
                        width: '40%'
                    },
                ]
            });
        }

        function updateAmount(phuCapId, newAmount) {
            var id = $('#pc_employeeId').val();
            var url = `/User/EmployeePhuCap/UpdateAmount/?employeeId=${id}&phuCapId=${phuCapId}&newAmount=${newAmount}`;
            $.ajax({
                url: url,
                type: 'POST',
                success: function (data) {
                    dataTable.ajax.reload();
                },
                error: function (data) {
                    toastr.error(data.responseJSON.message);
                }
            });
        }
    </script>
}