<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white-50 py-2">Quản lý kỷ luật</h2>
        </div>
    </div>
    <div class="card-body shadow p-4">
        <div class="row pb-3">
            @* <div class="col-6"></div> *@
            <div class="col-12 text-end">
                <a asp-controller="Reward" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i> Tạo khen thưởng mới
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped compact">
            <thead>
                <tr>
                    <th>Nhân viên</th>
                    <th>Loại khen thưởng</th>
                    <th>Ngày khen thưởng</th>
                    <th>Lý do</th>
                    <th>Mô tả</th>
                    <th>Ghi chú</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": { url: '/User/Reward/GetAll' },
                "columns": [
                    { data: 'name', width: '20%' },
                    { data: 'rewardType', width: '10%' },
                    {
                        data: 'rewardDate',
                        render: function (data) {
                            return formatDate(data);
                        },
                        width: '20%'
                    },
                    { data: 'reason', width: '20%' },
                    { data: 'description', width: '10%' },
                    { data: 'remarks', width: '10%' },
                    {
                        data: 'id',
                        "render": function (data, type, row) {
                            return `<div class="w-100 btn-group ms-auto btn-group-equal" role="group">
                                                <a href="/User/Reward/Upsert?id=${data}" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Sửa</a>
                                                <a onClick="Delete('/User/Reward/Delete/${data}')" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Xóa</a>
                                            </div>`;
                        },
                        width: '10%'
                    }
                ]
            });
        }

        function Delete(url) {
            Swal.fire({
                title: "Bạn chắc chứ?",
                text: "Khen thưởng sẽ bị xóa vĩnh viễn!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Xóa"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            dataTable.ajax.reload();
                            toastr.success(data.message);
                        }
                    })
                }
            });
        }

        function formatDate(datetime) {
            if (!datetime) return '';
            var date = new Date(datetime);
            var day = ("0" + date.getDate()).slice(-2);
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var year = date.getFullYear();
            return `${day}-${month}-${year}`;
        }
    </script>
}