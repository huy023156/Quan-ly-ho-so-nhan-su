@model ResignationVM

<div class="card shadow border-0 mt-5">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white-50 py-2">@(Model.Resignation.Id == 0 ? "Thêm" : "Sửa") đơn thôi việc</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input asp-for="Resignation.Id" hidden />
			<input asp-for="Resignation.IdentityUserId" hidden />
			<input asp-for="Resignation.Status" hidden />
			<input asp-for="Resignation.CreatedDate" hidden />
			<input asp-for="Resignation.UpdatedDate" hidden />
			@* <span asp-validation-sumary="ModelOnly"></span> *@

			<div class="border p-3">
				<div class="form-floating col-12 py-2">
					<select asp-items="Model.EmployeeList" asp-for="Resignation.EmployeeId" class="form-select border-0 shadow">
						<option disabled selected>--Select Employee--</option>
					</select>
					<label asp-for="Resignation.EmployeeId" class="ms-2"></label>
					<span asp-validation-for="Resignation.EmployeeId" class="text-danger"></span>
				</div>
				<div class="form-floating col-12 py-2">
					<input asp-for="Resignation.Reason" class="form-control border-0 shadow" />
					<label asp-for="Resignation.Reason" class="ms-2"></label>
					<span asp-validation-for="Resignation.Reason" class="text-danger"></span>
				</div>
				<div class="form-floating col-12 py-2">
					<input asp-for="Resignation.ResignationDate" class="form-control border-0 shadow" type="date" />
					<label asp-for="Resignation.ResignationDate" class="ms-2"></label>
					<span asp-validation-for="Resignation.ResignationDate" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">@(Model.Resignation.Id == 0 ? "Thêm" : "Sửa")</button>

					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Resignation" asp-action="Index" class="btn btn-outline-secondary form-control">
							Quay lại
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}

