@model ChiNhanhNganHangVM

<div class="card shadow border-0 mt-5">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white-50 py-2">@(Model.ChiNhanhNganHang.Id == 0 ? "Thêm" : "Sửa") chi nhánh ngân hàng</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input asp-for="ChiNhanhNganHang.Id" hidden />
			@* <span asp-validation-sumary="ModelOnly"></span> *@

			<div class="border p-3">
				<div class="form-floating col-12 py-2">
					<select asp-items="Model.NganHangList" asp-for="ChiNhanhNganHang.NganHangId" class="form-select border-0 shadow">
						<option disabled selected>--Select Ngân Hàng--</option>
					</select>
					<label asp-for="ChiNhanhNganHang.NganHangId" class="ms-2"></label>
					<span asp-validation-for="ChiNhanhNganHang.NganHangId" class="text-danger"></span>
				</div>
                <div class="form-floating col-12 py-2">
                    <input asp-for="ChiNhanhNganHang.DiaChi" class="form-control border-0 shadow" />
                    <label asp-for="ChiNhanhNganHang.DiaChi" class="ms-2"></label>
                    <span asp-validation-for="ChiNhanhNganHang.DiaChi" class="text-danger"></span>
                </div>
                @if (Model.ChiNhanhNganHang.Id == 0)
                {
                    <div class="form-floating col-12 py-2">
                        <select asp-items="Model.QuocGiaList" asp-for="QuocGiaId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Quốc Gia--</option>
                        </select>
                        <label asp-for="QuocGiaId" class="ms-2"></label>
                        <span asp-validation-for="QuocGiaId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <select disabled asp-for="TinhThanhId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Tỉnh Thành--</option>
                        </select>
                        <label asp-for="TinhThanhId" class="ms-2"></label>
                        <span asp-validation-for="TinhThanhId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <select disabled asp-for="QuanHuyenId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Quận Huyện--</option>
                        </select>
                        <label asp-for="QuanHuyenId" class="ms-2"></label>
                        <span asp-validation-for="QuanHuyenId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <select disabled asp-for="ChiNhanhNganHang.XaPhuongId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Xã Phường--</option>
                        </select>
                        <label asp-for="ChiNhanhNganHang.XaPhuongId" class="ms-2"></label>
                        <span asp-validation-for="ChiNhanhNganHang.XaPhuongId" class="text-danger"></span>
                    </div>
                } else
                {
                    <div class="form-floating col-12 py-2">
                        <select asp-items="Model.QuocGiaList" asp-for="QuocGiaId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Quốc Gia--</option>
                        </select>
                        <label asp-for="QuocGiaId" class="ms-2"></label>
                        <span asp-validation-for="QuocGiaId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <select asp-items="Model.TinhThanhList" asp-for="TinhThanhId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Tỉnh Thành--</option>
                        </select>
                        <label asp-for="TinhThanhId" class="ms-2"></label>
                        <span asp-validation-for="TinhThanhId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <select asp-items="Model.QuanHuyenList" asp-for="QuanHuyenId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Quận Huyện--</option>
                        </select>
                        <label asp-for="QuanHuyenId" class="ms-2"></label>
                        <span asp-validation-for="QuanHuyenId" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <select asp-items="Model.XaPhuongList" asp-for="ChiNhanhNganHang.XaPhuongId" class="form-select border-0 shadow">
                            <option disabled selected>--Select Xã Phường--</option>
                        </select>
                        <label asp-for="ChiNhanhNganHang.XaPhuongId" class="ms-2"></label>
                        <span asp-validation-for="ChiNhanhNganHang.XaPhuongId" class="text-danger"></span>
                    </div>
                }

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">@(Model.ChiNhanhNganHang.Id == 0 ? "Thêm" : "Sửa")</button>

					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="ChiNhanhNganHang" asp-action="Index" class="btn btn-outline-secondary form-control">
							Quay lại
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }

    <script src="~/js/chiNhanhNganHangUpsert.js"></script>
}
